set $bg-color            #404552

set $black               #000000
set $white               #ffffff
set $blue                #007aff
set $green               #4cd964
set $red                 #ff3b30
set $gray                #757575

# class                 border              background         text                 indicator
client.focused          $blue               $blue              $white               $green
client.unfocused        $black              $black             $gray                $green
client.focused_inactive $blue               $black              $white              $green
client.urgent           $red                $red               $black               $green

